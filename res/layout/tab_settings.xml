<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background_color"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/setting_divide_height"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                style="@style/setting_item"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自动分享WiFi密码" />

                <com.hiwifi.app.views.SwitchButton
                    android:id="@+id/sb_auto_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_item"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自动备份WiFi密码" />

                <com.hiwifi.app.views.SwitchButton
                    android:id="@+id/sb_auto_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_item"
                android:layout_marginTop="@dimen/setting_divide_height"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="通知栏开关" />

                <com.hiwifi.app.views.SwitchButton
                    android:id="@+id/swt_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="right" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/feedback"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="建议反馈" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bar_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_app_recommend"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="精品推荐" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bar_right_arrow" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/setting_divide_height"
                android:id="@+id/ll_agreement"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务协议" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bar_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关于" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bar_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_version"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APP版本" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_small_margin"
                    android:layout_weight="1"
                    android:text="V1.11"
                    android:textColor="@color/major_color" />

                <ImageView
                    android:id="@+id/iv_app_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_new"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_test"
                style="@style/setting_item_clicked"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/setting_item_text"
                    android:layout_width="@dimen/width_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bar_right_arrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>